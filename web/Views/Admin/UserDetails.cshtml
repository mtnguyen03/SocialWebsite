@model SocialFrontEnd.Models.UserModel
@{
    Layout = "_AdminLayout";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">User Details</h4>
        <div>
            <a href="@Url.Action("Edit", new { email = Model.Email })" class="btn btn-primary">
                <i class="ri-pencil-line mr-2"></i>Edit
            </a>
            <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                <i class="ri-arrow-left-line mr-2"></i>Back
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 text-center">
                <img src="@(string.IsNullOrEmpty(Model.PhotoUrl) ? "/images/user/1.jpg" : Model.PhotoUrl)" 
                     class="rounded-circle img-fluid mb-3" style="max-width: 150px">
                <h4>@Model.FullName</h4>
                <p class="text-muted">@Model.Role</p>
            </div>
            <div class="col-md-9">
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card bg-primary text-white p-3">
                            <h3>0</h3>
                            <p class="mb-0">Posts</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white p-3">
                            <h3>0</h3>
                            <p class="mb-0">Comments</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white p-3">
                            <h3>0</h3>
                            <p class="mb-0">Friends</p>
                        </div>
                    </div>
                </div>
                
                <h5>User Information</h5>
                <table class="table">
                    <tr>
                        <th width="200">Username</th>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Model.Address</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div> 